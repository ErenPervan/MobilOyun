<?xml version="1.0" encoding="utf-8"?>
<!-- 
    ════════════════════════════════════════════════════════════════
    EDİT TEXT ARKAPLAN (MODERN INPUT FIELD)
    ════════════════════════════════════════════════════════════════
    
    Modern, yuvarlak köşeli input field arka planı
    - Beyaz arka plan
    - İnce gri kenarlık
    - Yuvarlak köşeler (12dp)
    - Hafif gölge efekti için padding
    
    @author Senior Android UI/UX Engineer
    ════════════════════════════════════════════════════════════════
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Arka plan rengi -->
    <solid android:color="#FFFFFF"/>
    
    <!-- Kenarlık -->
    <stroke
        android:width="2dp"
        android:color="#E0E0E0"/>
    
    <!-- Yuvarlak köşeler -->
    <corners android:radius="12dp"/>
    
    <!-- İç boşluk -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="12dp"
        android:bottom="12dp"/>
    
</shape>
