<?xml version="1.0" encoding="utf-8"?>
<!-- 
    ════════════════════════════════════════════════════════════════
    BEYAZ KART ARKAPLAN (CENTRAL PANEL)
    ════════════════════════════════════════════════════════════════
    
    Merkezi panel arka planı - CardView alternatifi
    - Beyaz arka plan
    - Yuvarlak köşeler (16dp)
    - Hafif şeffaf gölge kenarlığı
    
    NOT: CardView yerine bu drawable kullanılarak daha hafif bir yapı
    
    @author Senior Android UI/UX Engineer
    ════════════════════════════════════════════════════════════════
-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Beyaz arka plan -->
    <solid android:color="#FFFFFF"/>
    
    <!-- Yuvarlak köşeler -->
    <corners android:radius="16dp"/>
    
    <!-- Hafif gri kenarlık (opsiyonel) -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/>
    
</shape>
